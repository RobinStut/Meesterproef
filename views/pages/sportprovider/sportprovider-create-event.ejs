<% include ../../partials/header %>

<h1>Sportstimulering</h1>

<% include ../../partials/nav %> <% include ../../partials/hero %>

<main>
	<section id="st-create-event" class="display-flex-v st-section-radius">
		<h3>CreeÃ«r een activiteit</h3>

		<form action="/create-event" class="display-flex-v" method="POST">
			<label for="event-name" class="label-required">Titel</label>
			<input
				id="event-name"
				type="text"
				name="event-name"
				placeholder="Bijv. Amsterdam City Swim"
				required
			/>

			<label for="event-description" class="label-required">Omschrijving</label>
			<textarea
				id="event-description"
				name="event-description"
				maxlength="140"
				placeholder="Max 140 karakters..."
				required
			></textarea>

			<label for="event-image">Afbeelding</label>
			<p>
				Upload een article voor bij je activiteit.
			</p>
			<input
				id="event-image"
				type="file"
				accept="image/png, image/jpeg"
				name="event-image"
			/>

			<label for="event-type" class="label-required">Type Activiteit</label>
			<p>
				Wat voor soort activiteit is het?
			</p>
			<select id="event=sport" name="event-sport" required>
				<option value="training">Training</option>
				<option value="opendag">Opendag</option>
				<option value="sportdag">Sportdag</option>
			</select>

			<label for="event-sport" class="label-required">Sport</label>
			<p>
				Om welke sport draait de activiteit?
			</p>
			<select id="event=sport" name="event-sport" required>
				<% data.forEach(sport => { %>
				<option value="<%= sport.sport %>"><%= sport.sport %></option>
				<% }) %>
			</select>

			<label for="event-category" class="label-required">Categorie</label>
			<p>
				Tot welke categorie behoord je sport?
			</p>
			<select id="event-category" name="event-category" required>
				<% data.forEach(category => { %>
				<option value="<%= category.category %>"
					><%= category.category %></option
				>
				<% }) %>
			</select>

			<label for="event-city" class="label-required">Stadsdeel</label>
			<input
				id="event-city"
				type="text"
				name="event-city"
				placeholder="Bijv. Amsterdam Zuidoost"
				required
			/>

			<label for="event-location-name">Locatie</label>
			<p>
				De naam van de locatie waar de activiteit zich plaatsvind.
			</p>
			<input
				id="event-location-name"
				type="text"
				name="event-location-name"
				placeholder="Bijv. Bijlmer Sportpark"
			/>

			<label for="event-address" class="label-required">Address</label>
			<input
				id="event-address"
				type="text"
				name="event-address"
				placehoder="Bijv. Karspeldreef 501, 1102 BX Amsterdam"
				required
			/>

			<label for="event-date" class="label-required">Datum</label>
			<p>
				Op welke dag vind de activiteit plaats?
			</p>
			<input id="event-date" type="date" name="event-date" required />

			<label for="event-from-time" class="label-required">Van</label>
			<p>
				De activiteit begint om:
			</p>
			<input id="event-from-time" type="time" name="event-from-time" required />

			<label for="event-till-time" class="label-required">Tot</label>
			<p>
				De activiteit eindigt om:
			</p>
			<input id="event-till-time" type="time" name="event-till-time" required />

			<fieldset>
				<legend class="label-required">
					Is je activiteit eenmalig, wekelijks, maandelijks?
				</legend>

				<input id="one-off" type="radio" name="event-recurring" required />
				<label for="one-off">Eenmalig</label>
				<br />

				<input id="weekly" type="radio" name="event-recurring" required />
				<label for="weekly">Wekelijks</label>
				<br />

				<input id="monthly" type="radio" name="event-recurring" required />
				<label for="monthly">Maandelijks</label>
				<br />

				<input id="annually" type="radio" name="event-recurring" required />
				<label for="annually">Jaarlijks</label>
			</fieldset>

			<button type="submit" class="st-button st-button-border">Submit</button>
		</form>
	</section>
</main>

<% include ../../partials/footer %>
