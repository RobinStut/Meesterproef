<% include ../../partials/header %>

<h1>Sportstimulering</h1>

<% include ../../partials/nav %> <% include ../../partials/hero %>

<main>
	<section id="st-create-event" class="display-flex-v st-section-radius">
		<h3>CreeÃ«r een Event</h3>

		<form action="/create-event" class="display-flex-v" method="POST">
			<label for=""
				>Titel
				<input type="text" name="event-name" required />
			</label>

			<label for=""
				>Omschrijving
				<textarea name="event-description" required></textarea>
			</label>

			<label for=""
				>Afbeelding
				<input
					type="file"
					accept="image/png, image/jpeg"
					name="event-image"
					required
				/>
			</label>

			<label for=""
				>Sport
				<select name="event-sport">
					<% data.forEach(sport => { %>
					<option value="<%= sport.sport %>"><%= sport.sport %></option>
					<% }) %>
				</select>
			</label>

			<label for=""
				>Categorie
				<select name="event-category">
					<% data.forEach(category => { %>
					<option value="<%= category.category %>"
						><%= category.category %></option
					>
					<% }) %>
				</select>
			</label>

			<label for=""
				>City
				<input
					type="text"
					name="event-city"
					placeholder="Bijv. Amsterdam"
					required
				/>
			</label>

			<label for=""
				>Locatie Naam
				<input
					type="text"
					name="event-location-name"
					placeholder="Bijv. Bijlmer Sportpark"
					required
				/>
			</label>

			<label for=""
				>Address
				<input type="text" name="event-address" required />
			</label>

			<label for=""
				>Datum
				<input type="date" name="event-date" required />
			</label>

			<div>
				<label for=""
					>Van
					<input type="time" name="event-from-time" required />
				</label>

				<label for=""
					>Tot
					<input type="time" name="event-till-time" required />
				</label>
			</div>

			<button type="submit" class="st-button st-button-border">Submit</button>
		</form>
	</section>
</main>

<% include ../../partials/footer %>
