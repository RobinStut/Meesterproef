<% include ../../partials/header %>

<h1>Sportstimulering</h1>

<% include ../../partials/nav %> <% include ../../partials/hero %>

<main>
	<section class="display--flex-v section section--radius section--padding-0">
		<h3 class="section__h3--heading">Jouw activiteit</h3>

		<article class="article">
			<p class="article__p"><%= event.general.title %></p>

			<img
				class="article__img"
				src="/uploads/<%= event.general.image %>"
				alt=""
			/>

			<a
				href="#"
				class="button button--solid-yellow button--small article__button"
				><%= event.sport.name %></a
			>

			<p class="article__description"><%= event.general.description %></p>

			<p class="article__time">
				Van <span class="st-p-bold"><%= event.time.start %></span> t/m
				<span class="st-p-bold"><%= event.time.end %></span>
			</p>

			<ul class="article__list">
				<li><%= event.location.name %></li>
				<li><%= event.location.city %></li>
				<li><%= event.location.address %></li>
			</ul>
		</article>

		<form action="/publish-event" method="POST">
			<button type="submit" class="button button--ghost">
				Publiceer activiteit
			</button>
		</form>
	</section>
</main>

<% include ../../partials/footer %>
